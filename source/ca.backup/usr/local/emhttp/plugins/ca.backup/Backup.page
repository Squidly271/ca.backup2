      var value = "something really went wrong here";
    }
    if ( (value == null) ) {
      value = " ";
    }
    value = value.trim();
    $(this).val(value);
    if ( ! this.id ) {
      var ID = 'unknownID';
    } else {
      var ID = this.id;
    }
    var newSetting = new Array(ID,value);
    
